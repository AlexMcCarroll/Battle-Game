      <input type="submit" value="Attack Player 2!">
    </form>
    <br>
    <%="<img src='http://bit.ly/2iaLfgJ' >" * @player1.hit_points%>
    </div>
    <div>
    <h3><%=@player2.name%> has <%=@player2.hit_points%> lives left</h3>
    <%="<img src='http://bit.ly/2iaLfgJ' >" * @player2.hit_points%>
    <br>
    <br>
    <form action="/attack_2" method="post">
      <input type="submit" value="Attack Player 1!">
    </form>
    </div>
  </body>
</html>
